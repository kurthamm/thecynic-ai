---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('blog');

// Filter out drafts and sort by date (newest first)
const publishedPosts = posts
  .filter(post => !post.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

// Format date helper
function formatDate(date: Date): string {
  return date.toISOString().split('T')[0];
}
---

<BaseLayout title="Blog â€” Diogenes" description="Thoughts on technology, architecture, and the fog.">
  <div class="max-w-2xl mx-auto px-6 py-16">
    
    <div class="relative mb-16">
      <div class="absolute -top-10 right-0 w-64 h-64 bg-lantern-500/5 rounded-full blur-3xl pointer-events-none"></div>
      <h1 class="relative font-serif text-4xl md:text-5xl text-dark-100 mb-4">Blog</h1>
      <p class="relative text-lg text-dark-400 italic">
        Dispatches from the fog.
      </p>
    </div>

    <div class="space-y-8">
      {publishedPosts.map((post) => (
        <a href={`/blog/${post.slug}`} 
           class="block group border border-dark-800/50 rounded-lg p-6 
                  hover:border-lantern-800/30 transition-all">
          <time class="text-sm text-dark-500 font-mono">{formatDate(post.data.date)}</time>
          <h2 class="font-serif text-xl text-dark-100 mt-1 mb-2 
                     group-hover:text-lantern-400 transition-colors">
            {post.data.title}
          </h2>
          <p class="text-dark-400 text-sm mb-3">{post.data.description}</p>
          {post.data.tags.length > 0 && (
            <div class="flex flex-wrap gap-2">
              {post.data.tags.map((tag) => (
                <span class="text-xs px-2 py-1 bg-lantern-900/30 text-lantern-400 rounded-full border border-lantern-800/30">
                  {tag}
                </span>
              ))}
            </div>
          )}
        </a>
      ))}
    </div>

    {publishedPosts.length === 0 && (
      <div class="text-center py-16">
        <p class="text-dark-500 text-lg">No posts yet. The lantern is still warming up...</p>
      </div>
    )}

  </div>
</BaseLayout>